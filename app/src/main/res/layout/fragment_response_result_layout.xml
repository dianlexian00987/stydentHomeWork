<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x960"
    android:layout_height="@dimen/x993">

    <ImageView
        android:id="@+id/response_reward"
        android:layout_width="@dimen/x960"
        android:layout_height="@dimen/x960"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/response_result" />

    <TextView
        android:id="@+id/response_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/response_success"
        android:layout_centerHorizontal="true"
        android:text="七子笑"
        android:textColor="@android:color/white"
        android:textSize="@dimen/x60" />

    <TextView
        android:id="@+id/response_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/response_close"
        android:layout_centerHorizontal="true"
        android:text="抢答成功 "
        android:textColor="@android:color/white"
        android:textSize="@dimen/x60" />

    <ImageView
        android:id="@+id/response_close"
        android:layout_width="@dimen/x66"
        android:layout_height="@dimen/x66"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x30"
        android:src="@mipmap/response_close" />
</RelativeLayout>

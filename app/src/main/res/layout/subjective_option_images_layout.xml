<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <FrameLayout
        android:id="@+id/subjective_answer_frame_one"
        android:layout_width="@dimen/y288"
        android:layout_height="@dimen/x280"
        android:visibility="invisible"
        >

        <ImageView
            android:id="@+id/subjective_img_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:id="@+id/subjective_del_layout_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#99000000">

            <ImageView
                android:id="@+id/subjective_del_one"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x80"
                android:padding="@dimen/x15"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/x9"
                android:layout_marginTop="@dimen/x9"
                android:src="@mipmap/del_litter" />
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/subjective_answer_frame_two"
        android:layout_width="@dimen/y288"
        android:layout_height="@dimen/x280"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        >

        <ImageView
            android:id="@+id/subjective_img_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:id="@+id/subjective_del_layout_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#99000000">

            <ImageView
                android:id="@+id/subjective_del_two"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x80"
                android:padding="@dimen/x15"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/x9"
                android:layout_marginTop="@dimen/x9"
                android:src="@mipmap/del_litter" />
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/subjective_answer_frame_three"
        android:layout_width="@dimen/y288"
        android:layout_height="@dimen/x280"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        >

        <ImageView
            android:id="@+id/subjective_img_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:id="@+id/subjective_del_layout_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#99000000">

            <ImageView
                android:id="@+id/subjective_del_three"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x80"
                android:padding="@dimen/x15"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/x9"
                android:layout_marginTop="@dimen/x9"
                android:src="@mipmap/del_litter" />
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/after_homework_head_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/x24"
        android:layout_marginTop="@dimen/x12"
        android:text="发布日期：2019/03/26"
        android:textColor="#ffcacaca"
        android:textSize="@dimen/x24"></TextView>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/after_homework_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
</LinearLayout>
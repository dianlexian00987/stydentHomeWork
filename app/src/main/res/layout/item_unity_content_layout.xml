<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/x30"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/unity_content_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x400"
        android:scaleType="centerCrop"
        android:src="@mipmap/qwfl_plane_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/x30">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/eye_see"
            android:visibility="gone" />

        <TextView
            android:id="@+id/unity_content_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:text="777"
            android:textColor="@color/word_gray"
            android:visibility="gone" />

        <TextView
            android:id="@+id/unity_content_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="right"
            android:lines="1"
            android:maxEms="10"
            android:text="小蝌蚪找妈妈"
            android:textColor="@color/word_gray"
            android:textSize="@dimen/x28" />
    </LinearLayout>
</LinearLayout>
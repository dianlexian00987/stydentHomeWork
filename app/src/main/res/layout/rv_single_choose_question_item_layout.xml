<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray">

    <LinearLayout
        android:id="@+id/item_scroll_linear"
        android:layout_width="@dimen/y800"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/item_total_question"
        android:orientation="vertical"
        android:visibility="gone"/>

    <com.telit.zhkt_three.CustomView.QuestionView.QuestionType.SingleChooseQuestionView
        android:id="@+id/item_total_question"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/item_scroll_linear"/>

    <com.telit.zhkt_three.CustomView.QuestionView.NewKnowledgeQuestionView
        android:id="@+id/item_total_banks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/item_scroll_linear"
        android:visibility="gone"/>
</RelativeLayout>
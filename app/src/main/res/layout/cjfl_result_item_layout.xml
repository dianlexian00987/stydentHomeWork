<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--
          android:layout_width="@dimen/x250"
        android:layout_height="@dimen/x362"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cjfl_result_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_cjfl_result_head"
            android:gravity="center"
            android:text="分类一"
            android:textColor="@android:color/white"
            android:textSize="@dimen/x24" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_cjfl_result_body">

            <LinearLayout
                android:id="@+id/cjfl_result_item_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:orientation="vertical"></LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
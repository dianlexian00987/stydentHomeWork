<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/qwfl_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/qwfl_frog_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x33"
        android:layout_marginLeft="@dimen/y21"
        android:layout_marginRight="@dimen/y21"
        android:layout_marginTop="@dimen/x18">

        <TextView
            android:id="@+id/qwfl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="请输入标题"
            android:textColor="#67C3E0"
            android:textSize="@dimen/x36" />

        <LinearLayout
            android:id="@+id/practice_time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_clock_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x51"
                android:layout_height="@dimen/x51"
                android:src="@mipmap/clock" />

            <TextView
                android:id="@+id/qwfl_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用时：05:29"
                android:textColor="#FF930A"
                android:textSize="@dimen/x36" />
        </LinearLayout>
    </RelativeLayout>

    <!--趣味分类主体-->
    <com.telit.zhkt_three.CustomView.interactive.QWFL.InterestingClassificationLayout
        android:id="@+id/qwfl_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.telit.zhkt_three.CustomView.interactive.QWFL.InterestingClassificationLayout>

    <ImageView
        android:id="@+id/qwfl_reset"
        android:layout_width="@dimen/x108"
        android:layout_height="@dimen/x108"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/x60"
        android:layout_marginRight="@dimen/x60"
        android:src="@mipmap/reset" />

    <!--趣味分类的结果-->
    <LinearLayout
        android:id="@+id/qwfl_result_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="@dimen/x526"
            android:layout_height="@dimen/x724"
            android:layout_marginRight="@dimen/x321"
            android:background="@mipmap/qwfl_result">

            <TextView
                android:id="@+id/qwfl_result_tv_left"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x200"
                android:gravity="center"
                android:text="这是容器一的标题"
                android:textColor="@android:color/white" />

            <com.telit.zhkt_three.CustomView.FlowLayout
                android:id="@+id/qwfl_result_flowlayout_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/qwfl_result_tv_left"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/x30"
                app:lineSpacing="@dimen/x20" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/x526"
            android:layout_height="@dimen/x724"
            android:background="@mipmap/qwfl_result">

            <TextView
                android:id="@+id/qwfl_result_tv_right"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x200"
                android:gravity="center"
                android:text="这是容器一的标题"
                android:textColor="@android:color/white" />

            <com.telit.zhkt_three.CustomView.FlowLayout
                android:id="@+id/qwfl_result_flowlayout_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/qwfl_result_tv_right"
                android:layout_marginTop="@dimen/x30"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                app:lineSpacing="@dimen/x20" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/group_select_linear"
        android:layout_width="@dimen/y1420"
        android:layout_height="@dimen/x56"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x30"
        android:background="@drawable/shape_select_group"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/group_select_name"
            android:layout_width="@dimen/x190"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_group_select"
            android:gravity="center"
            android:text="第一组"
            android:textColor="@drawable/selector_group_select_color"
            android:textSize="@dimen/x20" />

        <TextView
            android:id="@+id/group_select_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:lines="1"
            android:paddingLeft="@dimen/x24"
            android:paddingRight="@dimen/x24"
            android:text="喜欢数学的进这里来,喜欢数学的进这里来,喜欢数学的进这里来,喜欢数学的进这里来,喜欢数学的进这里来,喜欢数学的进这里来"
            android:textColor="@color/word_gray_deep"
            android:textSize="@dimen/x20" />
    </LinearLayout>
</RelativeLayout>
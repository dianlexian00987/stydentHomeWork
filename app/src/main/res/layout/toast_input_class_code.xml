<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_white_corner_5dp_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/edit_delete_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="15dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="@dimen/x30"
        android:drawableLeft="@mipmap/wifi_icon"
        android:gravity="center_vertical"
        android:drawablePadding="6dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginBottom="@dimen/x60">

        <com.telit.zhkt_three.CustomView.EmojiEditText
            android:id="@+id/et_code"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#303753"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:hint="请输入六位班级码"
            android:maxLength="6"
            android:inputType="number"
            android:singleLine="true"
            android:background="@drawable/layer_list_dialog_edittext_bg" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/shape_class_code_join"
            android:text="加入班级"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:enabled="false"
            android:alpha="0.5"/>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <FrameLayout
            android:id="@+id/pre_item_cloud_frame"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x246">
            <!--背景图片-->
            <ImageView
                android:id="@+id/pre_item_cloud_imgBg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/homework_bg"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/pre_item_cloud_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x5"
                    android:src="@mipmap/icon_video"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/pre_item_cloud_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/x15"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:layout_marginTop="@dimen/x15"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/x24" />

                <!--视频标志-->
                <ImageView
                    android:id="@+id/pre_item_cloud_img_video"
                    android:layout_width="@dimen/x75"
                    android:layout_height="@dimen/x54"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/icon_video"
                    android:visibility="gone" />

                <!--评分条-->
                <RatingBar
                    android:id="@+id/pre_item_cloud_ratingBar"
                    style="?attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:rating="2.5" />

            </RelativeLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/pre_item_cloud_frame"
            android:layout_alignRight="@+id/pre_item_cloud_frame"
            android:layout_below="@+id/pre_item_cloud_frame"
            android:layout_marginBottom="@dimen/x18"
            android:layout_marginLeft="@dimen/y6"
            android:layout_marginRight="@dimen/y6"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pre_item_cloud_tv_topic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:inputType="text"
                android:maxEms="7"
                android:text="明天预习课程"
                android:textColor="@color/word_gray_deep"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/x30" />

            <ImageView
                android:id="@+id/iv_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/pre_item_cloud_tv_go_study"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y9"
                android:background="@drawable/shape_round_corner_homework_bg"
                android:gravity="center"
                android:text="去学习"
                android:padding="6dp"
                android:visibility="gone"
                android:textColor="@color/homework_text_color"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/x21" />

            <TextView
                android:id="@+id/pre_item_cloud_tv_colorType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y9"
                android:background="@drawable/shape_round_corner_homework_bg"
                android:gravity="center"
                android:text="文件夹"
                android:padding="6dp"
                android:textColor="@color/homework_text_color"
                android:textSize="@dimen/x21" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>